<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_ll"
    android:layout_width="@dimen/widget_size"
    android:layout_height="@dimen/widget_size"
    android:background="@color/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_list_item_height"
        android:contentDescription="@string/img_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/gray_bg" />

    <TextView
        android:id="@+id/widget_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        tools:text="nasa" />

    <TextView
        android:id="@+id/widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        tools:text="time" />

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text"
        android:layout_marginTop="@dimen/default_margin"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/small_text"
        android:textStyle="bold"
        tools:text="News title is displayed here" />


</LinearLayout>